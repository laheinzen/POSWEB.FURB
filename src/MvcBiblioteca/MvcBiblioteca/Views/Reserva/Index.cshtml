@model Biblioteca.Dominio.ReservaLivro

@{
    ViewBag.Title = "Index";
}

<h2>Reserva de livro</h2>
<div>   
        @if(Model.ReservaLivroId > 0){
            <div id="livroJaEmprestado">Esse livro já está reservado pelo usuário <strong>@Model.UsuarioDeb.Nome</strong></div>
        }      
        else{
               <p>Clique <strong> @Html.ActionLink(
                     "aqui para reservar",
                     "Reservar",
                     "Reserva",
                     new { livroId = @Model.LivroRelacionado.LivroId },
                     new { @class = "linkReserva" })</strong> o livro <strong>@Model.LivroRelacionado.Titulo</strong>.</p>
        }
   
</div>
<hr />
@Html.ActionLink("Voltar", "Index", "Livros")

